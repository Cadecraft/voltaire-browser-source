{
	"app": {
		"background": {
			"scripts": ["main.js"]
		}
	},
	"manifest_version": 3,
	"name": "Voltaire Browser",
	"version": "0.0.9.9",

	"description": "A fully functional/customizable Chromebook browser for those who feel limited by Chrome. Features bookmarks, tabs, backgrounds, etc.",
	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png",
		"128":"images/icon.png"
	},
	
	"permissions": [
		"contextMenus",
		"storage",
		"notifications",
		"system.network",
		"clipboardRead",
		"clipboardWrite",
		"desktopCapture",
		"webview",
		"fullscreen",
		"audioCapture",
		"fileSystem"
	]
}